<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/attachment_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/message_spacing">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/message_spacing"
        android:layout_marginRight="@dimen/message_spacing"
        android:contentDescription="@null"
        android:src="@drawable/attached_main" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/attachment_name"
            style="@style/AttachmentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/attachment_size"
            style="@style/AttachmentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
