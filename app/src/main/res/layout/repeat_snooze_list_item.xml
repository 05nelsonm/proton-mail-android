<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:minHeight="45dp"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/fields_default_space_small_plus"
    android:paddingTop="@dimen/fields_default_space_small_plus">

    <ImageView
        android:id="@+id/repeat_snooze_selected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_done_white"
        android:tint="@color/dark_purple"
        android:visibility="gone" />

    <TextView
        android:id="@+id/repeat_snooze_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fields_default_space"
        android:paddingRight="@dimen/fields_default_space"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textSize="@dimen/h5" />

</LinearLayout>
